{
    "policy": {
        "Version": "2012-10-17",
        "Statement": [
            {
                "Sid": "DenySpecificResourceCreationsWithNoGidTag",
                "Effect": "Deny",
                "Action": [
                    "ec2:CreateVolume",
                    "iam:CreatePolicy",
                    "iam:CreateRole",
                    "lambda:CreateFunction",
                    "rds:CreateDBCluster",
                    "sns:CreateTopic",
                    "iam:CreateUser",
                    "sqs:CreateQueue"
                ],
                "Resource": [
                    "*"
                ],
                "Condition": {
                    "Null": {
                        "aws:RequestTag/gid": "true"
                    }
                }
            },
            {
                "Sid": "DenyEc2WithoutTags",
                "Effect": "Deny",
                "Action": [
                    "ec2:RunInstances"
                ],
                "Resource": [
                    "arn:aws:ec2:*:*:instance/*",
                    "arn:aws:ec2:*:*:volume/*"
                ],
                "Condition": {
                    "Null": {
                        "aws:RequestTag/gid": "true"
                    }
                }
            }
        ]
    },
    "description": "RequiredTags"
}